        //Encrypt and decrypt

        function encodeStr(uncoded) {

            uncoded = uncoded.toUpperCase().replace(/^\s+|\s+$/g, "");
            var coded = "";
            var chr;
            for (var i = uncoded.length - 1; i >= 0; i--) {
                chr = uncoded.charCodeAt(i);
